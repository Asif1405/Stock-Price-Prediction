def get_tickers():
    resp = requests.get('http://en.wikipedia.org/wiki/List_of_S%26P_500_companies') #requesting data from wikipedia
    soup = bs.BeautifulSoup(resp.text, 'lxml') #Creating soup element
    table = soup.find('table', {'class': 'wikitable sortable'}) #creating Table
    tickers = []
    for row in table.findAll('tr')[1:]:
        ticker = row.findAll('td')[0].text
        tickers.append(ticker)
        tickers = [x.replace("\n","") for x in tickers]   #getting tickers
        
    with open("tickers.pickle","wb") as f:
        pickle.dump(tickers,f)   #saving tickers

    return tickers

get_tickers()


def get_data(reload_sp500=False):
    if reload_sp500:
        tickers = get_tickers()  
    else:
        with open("sp500tickers.pickle", "rb") as f:
            tickers = pickle.load(f)       #getting data
    if not os.path.exists('folder_name'):
        os.makedirs('folder_name')    #saving in a file

    start = dt.datetime(2015, 1, 1)
    end = dt.datetime.now()         #specify the data you want to download

    yf.pdr_override()   #the most important trick to get data

    for ticker in tickers:
        if not os.path.exists(file_path):
            df = pdr.get_data_yahoo(ticker, start, end)
            df.reset_index(inplace=True)
            df.set_index("Date", inplace=True)
            df.to_csv(file_path)                          getting saving all data in form of csv

        else:
            print("Already have {}".format(ticker))

get_data()
